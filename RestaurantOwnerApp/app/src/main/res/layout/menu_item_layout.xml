<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:text="Name"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/nameText"
        android:text="a description..."
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView11"
        android:layout_alignRight="@+id/textView11"
        android:layout_toRightOf="@+id/descriptionText"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:text="Price"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/priceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/descriptionText"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/descriptionText"
        android:layout_toRightOf="@+id/descriptionText"
        android:text="Price"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/priceText"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/priceText"
        android:layout_toRightOf="@+id/priceText"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="KRW"
        android:textAlignment="center" />

</RelativeLayout>


