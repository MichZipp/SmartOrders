<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:text="Name"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/nameText"
        android:text="a description..."
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView11"
        android:layout_alignRight="@+id/textView11"
        android:layout_toRightOf="@+id/descriptionText"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:text="Price"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/priceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/descriptionText"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/descriptionText"
        android:layout_toRightOf="@+id/descriptionText"
        android:text="Price"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/priceText"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/priceText"
        android:layout_toRightOf="@+id/priceText"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="KRW"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:text="Amount"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/btnRemove"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@+id/textView12"
        android:layout_toEndOf="@+id/textView11"
        android:layout_toRightOf="@+id/textView11"
        android:onClick="removeItem"
        app:srcCompat="@drawable/ic_remove_black_24dp" />

    <ImageButton
        android:id="@+id/btnAdd"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignTop="@+id/amountText"
        android:layout_toRightOf="@+id/amountText"
        android:paddingLeft="5dp"
        android:onClick="addItem"
        app:srcCompat="@drawable/ic_add_black_24dp"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12" />

    <TextView
        android:id="@+id/amountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnRemove"
        android:layout_alignTop="@+id/btnRemove"
        android:layout_toEndOf="@+id/btnRemove"
        android:layout_toRightOf="@+id/btnRemove"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="0"
        android:textAlignment="center" />

</RelativeLayout>


